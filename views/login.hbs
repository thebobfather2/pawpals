<div class="container mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-3">
                <form id="login" name="login" method="post" action="login" class="card-body cardbody-color p-lg-2">
                    <div class="text-center">
                        <img src="/images/dogstock1"
                            class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px"
                            alt="profile">
                    </div>
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                            placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Pawword"
                            required>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="loginbtn"
                            class="btn btn-success p-2 w-25 d-flex justify-content-center flex-nowrap mb-3 mt-3">Submit</button>
                    </div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">Not Registered?
                        <a href="/signup" class="text-dark fw-bold"> Create an Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>